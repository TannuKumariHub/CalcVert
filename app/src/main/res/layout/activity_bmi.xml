<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F19F6"
    tools:context=".BmiActivity">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/Bmi_screen"
        android:layout_width="244dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:background="#DEC5FD"
        android:clickable="true"
        android:gravity="center"
        android:text="Switch in Convert"
        android:textColor="#FBFBFB"
        android:textSize="5dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#0B0B0B"
        app:neumorph_shadowColorLight="#DEC5FD"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="flat">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI Calculator"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card"
        android:layout_width="177dp"
        android:layout_height="68dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Switch in Convert"
        android:textColor="#FBFBFB"
        android:textSize="5dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bmi_screen"
        app:neumorph_backgroundColor="#7F19F6"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#0B0B0B"
        app:neumorph_shadowColorLight="#E5D5F8"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="flat">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Health "
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/bmi_cal"
        android:layout_width="278dp"
        android:layout_height="72dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Switch in Convert"
        android:textColor="#FBFBFB"
        android:textSize="5dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:neumorph_backgroundColor="#7F19F6"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#0B0B0B"
        app:neumorph_shadowColorLight="#E5D5F8"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="flat">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="8dp"
                android:text="Calculate Your Health"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/weight_card"
        android:layout_width="321dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Switch in Convert"
        android:textColor="#FBFBFB"
        android:textSize="5dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmi_cal"
        app:neumorph_backgroundColor="#7F19F6"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#0B0B0B"
        app:neumorph_shadowColorLight="#E5D5F8"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="flat">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate Your Health"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.448" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/weight"
        android:layout_width="354dp"
        android:layout_height="87dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Switch in Convert"
        android:textColor="#FBFBFB"
        android:textSize="5dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_card"
        app:neumorph_backgroundColor="#7F19F6"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#0B0B0B"
        app:neumorph_shadowColorLight="#E5D5F8"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="12dp">

            <EditText
                android:id="@+id/edit_weight"
                android:layout_width="279dp"
                android:layout_height="31dp"
                android:background="@android:color/transparent"
                android:hint="Enter Weight"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.285"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.529" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/weight2"
        android:layout_width="179dp"
        android:layout_height="85dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Switch in Convert"
        android:textColor="#FBFBFB"
        android:textSize="5dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/weight1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight"
        app:neumorph_backgroundColor="#7F19F6"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#0B0B0B"
        app:neumorph_shadowColorLight="#E5D5F8"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edit_heghtfeet"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:hint="Enter height"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/weight1"
        android:layout_width="179dp"
        android:layout_height="85dp"
        android:layout_marginTop="28dp"

        android:layout_marginEnd="36dp"
        android:clickable="true"
        android:gravity="center"
        android:textColor="#FBFBFB"
        android:textSize="5dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/weight2"
        app:layout_constraintTop_toBottomOf="@+id/weight"
        app:neumorph_backgroundColor="#7F19F6"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#0B0B0B"
        app:neumorph_shadowColorLight="#E5D5F8"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edit_heightinch"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:hint="Enter inch"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_calculate"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="239dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="72dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Calculate"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight2"
        app:neumorph_backgroundColor="#7F19F6"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#0B0B0B"
        app:neumorph_shadowColorLight="#E5D5F8"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="flat" />


</androidx.constraintlayout.widget.ConstraintLayout>